{
  "name": "runpg-backend",
  "version": "0.0.0",
  "description": "Backend for RunPG",
  "main": "./dist/server.js",
  "engines": {
    "node": "^16.14.2"
  },
  "scripts": {
    "prod:start": "sudo docker-compose -f docker-compose.prod.yml up -d --build --force-recreate --remove-orphans",
    "prod:stop": "sudo docker-compose -f docker-compose.prod.yml down",
    "dev:setup": "npm run dev:up && npm run prisma:migrate && npm run prisma:seed && npm run test:migrate",
    "dev:up": "sudo docker-compose -f docker-compose.dev.yml up -d --force-recreate",
    "dev:down": "sudo docker-compose -f docker-compose.dev.yml down",
    "prisma:reset": "npx prisma migrate reset",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:seed": "ts-node --transpile-only prisma/seed.ts",
    "dev": "nodemon",
    "clean": "rm -rf dist node_modules",
    "start": "node dist/server.js",
    "test:migrate": "dotenv -e .env.test -- npx prisma migrate dev",
    "test:unit": "dotenv -e .env.test -- jest -i --config src/jest.config.unit.ts --group=unit",
    "test:integration": "dotenv -e .env.test -- jest -i --config src/jest.config.integration.ts --group=integration",
    "test": "npm run test:unit && npm run test:integration",
    "build": "tsc && cp -r src/resource/ dist/resource/",
    "lint": "eslint -c .eslintrc.json --ext .ts src/",
    "swagger-autogen": "npm run build && node src/swagger.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.13.0",
    "dotenv": "^16.0.1",
    "express": "^4.17.3",
    "http-status-codes": "^2.2.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.4.0"
  },
  "files": [
    "./bin/*",
    "./dist/*"
  ],
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "jest": "^28.1.0",
    "jest-mock-extended": "^2.0.6",
    "jest-runner-groups": "^2.2.0",
    "nodemon": "^2.0.15",
    "prisma": "^3.13.0",
    "supertest": "^6.2.3",
    "swagger-autogen": "^2.21.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
